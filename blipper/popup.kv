<AboutPopup>:
  orientation: "vertical"
  FloatLayout:
    canvas.before:
      Color:
        rgba: 0.1, 0.1, 0.1, 1
      Rectangle:
        # self here refers to the widget i.e BoxLayout
        pos: self.pos
        size: self.size  
    #size: root.size
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: 1, 0.85
    Label:
      size_hint: 0.9, 0.9
      background_color: [1,0,0,1]
      pos_hint: {'center_x': 0.5,'center_y': .5, }
      markup: True
      text: root.about_text
  FloatLayout:
    canvas.before:
      Color:
        rgba: 0.1, 0.1, 0.1, 1
      Rectangle:
        # self here refers to the widget i.e BoxLayout
        pos: self.pos
        size: self.size  
    #size: root.size
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: 1, 0.15
    Button:
      text: "Ok"
      #size: 1, 0.2
      size_hint: 0.15, 0.5
      #size: 0.5, 0.5
      pos_hint: {'center_x': .5, 'center_y': 0.5}
      #size_hint: 0.2, 0.2
      on_press: app.dismiss()